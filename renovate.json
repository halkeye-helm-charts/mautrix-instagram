{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(feat)"
  ],
  "bumpVersion": "patch",
  "regexManagers": [
    {
      "fileMatch": [
        "^Chart.yaml$"
      ],
      "matchStrings": [
        "image:\\s+\"(?<depName>[a-z/.-]+):(?<currentValue>[a-z0-9.-]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": [
        "^values.yaml$"
      ],
      "matchStrings": [
        "tag:\\s+\"(?<currentDigest>sha256:[a-f0-9]+)\""
      ],
      "depNameTemplate": "dock.mau.dev/mautrix/instagram",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "helmv3": {
    "enabled": true
  }
}
